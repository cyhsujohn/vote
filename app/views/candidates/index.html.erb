<h1>候選人列表</h1>

<%= link_to '新增候選人', new_candidate_path %>

<table>
  <thead>
    <tr>
      <th>投票</th>
      <th>得票數</th>
      <th>姓名</th>
      <th>年齡</th>
      <th>政黨</th>
      <th>政見</th>
      <th>動作</th>
    </tr>
  </thead>
  <tbody>
    <% @candidates.each do |candidate| %>
    <tr>
      <td><%= link_to "投給他", "#" %></td>
      <td></td>
      <td><%= candidate.name %></td>
      <td><%= candidate.age %> 歲</td>
      <td><%= candidate.political_party %></td>
      <td><%= candidate.politics %></td>
      <td><%= link_to "編輯", edit_candidate_path(candidate) %> 
        <%= link_to "刪除", candidate_path(candidate), method: "delete", data: {confirm: "確定刪除？"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>